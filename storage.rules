rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir a usuarios autenticados subir y leer archivos en excel-exports/
    match /excel-exports/{fileName} {
      allow read, write: if request.auth != null;
    }

    // Permitir a usuarios autenticados subir y leer evidencias
    match /evidencias_especialistas/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acceso a otras carpetas según sea necesario
    // Por ahora, solo excel-exports y evidencias_especialistas están permitidos
    match /{allPaths=**} {
      allow read, write: if false; // Denegar acceso por defecto a otras rutas
    }
  }
}

